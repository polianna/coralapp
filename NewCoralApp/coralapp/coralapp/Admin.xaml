<Window x:Class="coralapp.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coralapp"
        mc:Ignorable="d"
              Title="Склад магазина здорового питания" Background="#FFC5FFFF" ResizeMode="CanResizeWithGrip" Width="800" Height="600">
    <Grid Margin="6,0,0,-4">
        <Grid.RowDefinitions>
            <RowDefinition Height="67*" />
            <RowDefinition Height="430*" />
        </Grid.RowDefinitions>
        <Label x:Name="lLogo" Content="Склад" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Height="36" Width="96" FontFamily="Segoe Script" FontSize="24" FontWeight="Bold" Foreground="#FF073234"/>
        <Label x:Name="lDesc" Content="Магазин здорового питания" HorizontalAlignment="Left" Height="53" VerticalAlignment="Top" Width="240" FontFamily="Segoe Script" Margin="0,41,0,0" FontSize="14" Foreground="#FF073234" FontWeight="Bold" Grid.RowSpan="2"/>
        <TabControl x:Name="tabControl" Grid.Row="1" Margin="0,0,5,10" Background="White" SelectionChanged="tabControl_SelectionChanged">
            <TabItem x:Name="tabLogs" Header="Журнал учёта событий" Background="White" FontFamily="Comic Sans MS">
                <Grid Background="White" Margin="0,12,0,0">
                    <Label x:Name="lUserName" Content="Пользователь" HorizontalAlignment="Left" Height="34" Margin="74,0,0,0" VerticalAlignment="Top" Width="110" FontSize="14"/>
                    <ComboBox x:Name="cbUserName" HorizontalAlignment="Left" Height="34" Margin="189,0,0,0" VerticalAlignment="Top" Width="154" TextSearch.TextPath="username" DisplayMemberPath="username" IsTextSearchEnabled="True" IsEditable="True" ItemsSource="{Binding}" SelectedValue="{Binding username}" SelectionChanged="cbUserName_SelectionChanged" />
                    <Button x:Name="bAllLog" Content="Снять фильтр" HorizontalAlignment="Left" Height="34" Margin="597,38,0,0" VerticalAlignment="Top" Width="156" FontSize="14" Background="#FFC5FFFF" Click="bAllLog_Click"/>
                    <Button x:Name="bFilterLog" Content="Отфильтровать" HorizontalAlignment="Left" Height="34" Margin="597,0,0,0" VerticalAlignment="Top" Width="156" FontSize="14" Background="#FFC5FFFF" Click="bFilterLog_Click"/>
                    <DataGrid x:Name="dgLog" Margin="5,80,5,10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn IsReadOnly = "True" Binding="{Binding insertdate}" Header="Дата события" Width="120"/>
                            <DataGridTextColumn IsReadOnly = "True" Binding="{Binding username}" Header="Пользователь" Width="120"/>
                            <DataGridTextColumn IsReadOnly = "True" Binding="{Binding logtext}" Header="Событие" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label x:Name="lFromDate" Content="c" HorizontalAlignment="Left" Height="34" Margin="386,2,0,0" VerticalAlignment="Top" Width="25" FontSize="14" RenderTransformOrigin="0.266,0.326"/>
                    <DatePicker x:Name="dpFromDate" HorizontalAlignment="Left" Margin="428,0,0,0" VerticalAlignment="Top" Width="112" FirstDayOfWeek="Monday" Height="31"/>
                    <Label x:Name="lToDate" Content="по" HorizontalAlignment="Left" Height="34" Margin="382,41,0,0" VerticalAlignment="Top" Width="29" FontSize="14" RenderTransformOrigin="-1.293,1.705"/>
                    <DatePicker x:Name="dpToDate" HorizontalAlignment="Left" Margin="428,43,0,0" VerticalAlignment="Top" Width="112" FirstDayOfWeek="Monday" Height="31"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabUsers" Header="Управление пользователями" Background="White" FontFamily="Comic Sans MS">
                <Grid Background="White" Margin="0,2,0,-2">
                </Grid>
            </TabItem>
            <TabItem x:Name="tabDb" Header="Изменение данных в базе данных" Background="White" FontFamily="Comic Sans MS">
                <Grid Background="White" Margin="0,12,0,0">
                    <Label x:Name="lTableName" Content="Таблица" HorizontalAlignment="Left" Height="34" Margin="5,0,0,0" VerticalAlignment="Top" Width="110" FontSize="14"/>
                    <ComboBox x:Name="cbTableName" HorizontalAlignment="Left" Height="34" Margin="120,0,0,0" VerticalAlignment="Top" Width="202" TextSearch.TextPath="table_name" DisplayMemberPath="table_name" IsTextSearchEnabled="True" IsEditable="True" ItemsSource="{Binding}" SelectedValue="{Binding table_name}" SelectionChanged="cbTableName_SelectionChanged" />
                    <Label x:Name="lSQLText" Content="SQL Запрос" HorizontalAlignment="Left" Height="34" Margin="5,46,0,0" VerticalAlignment="Top" Width="110" FontSize="14" RenderTransformOrigin="0.501,2.122"/>
                    <TextBox x:Name="tbSQLText" HorizontalAlignment="Left" Margin="120,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="68" Width="457"/>

                    <Button x:Name="bTableView" Content="Просмотр таблицы" HorizontalAlignment="Left" Height="34" Margin="597,0,0,0" VerticalAlignment="Top" Width="156" FontSize="14" Background="#FFC5FFFF" Click="bTableView_Click" />
                    <Button x:Name="bSQLExec" Content="Выполнить SQL" HorizontalAlignment="Left" Height="34" Margin="597,53,0,0" VerticalAlignment="Top" Width="156" FontSize="14" Background="#FFC5FFFF" Click="bSQLExec_Click" />

                    <DataGrid x:Name="dgTable" Margin="5,126,5,46" AutoGenerateColumns="True"/>
                    <Button x:Name="bSave" Content="Сохранить" HorizontalAlignment="Left" Height="34" Margin="482,404,0,0" VerticalAlignment="Top" Width="131" FontSize="14" Background="#FFC5FFFF" IsEnabled="False" Click="bSave_Click" />
                    <Button x:Name="bCancel" Content="Отменить" HorizontalAlignment="Left" Height="34" Margin="634,404,0,0" VerticalAlignment="Top" Width="131" FontSize="14" Background="#FFC5FFFF" IsEnabled="False" Click="bCancel_Click" />

                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="bClose" Content="Выйти" HorizontalAlignment="Left" Margin="690,10,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="bClose_Click"/>
    </Grid>
</Window>
